<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:id="@+id/ll_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">

    <include layout="@layout/activity_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/diviceF6F6F6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="14dp"
                android:paddingLeft="11dp"
                android:paddingTop="15dp"
                android:text="号码"
                android:textColor="@color/f999999"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/msg_details_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingBottom="14dp"
                android:paddingLeft="11dp"
                android:paddingTop="15dp"
                android:text="A-057  （1-2人桌）"
                android:textColor="@color/f333333"
                android:textSize="13sp" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/view_hor_padingleft10" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="14dp"
                android:paddingLeft="11dp"
                android:paddingTop="15dp"
                android:text="当前状态"
                android:textColor="@color/f999999"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/msg_details_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingBottom="14dp"
                android:paddingLeft="11dp"
                android:paddingTop="15dp"
                android:text="正在排队"
                android:textColor="@color/title_redF23030"
                android:textSize="13sp" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/view_hor_padingleft10" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/ll_choose_role"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="14dp"
                android:paddingLeft="11dp"
                android:paddingTop="15dp"
                android:text="顾客角色"
                android:textColor="@color/f999999"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_customer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingBottom="14dp"
                android:paddingLeft="11dp"
                android:paddingTop="15dp"
                android:text="选择顾客角色后开台"
                android:drawableRight="@mipmap/more"
                android:paddingRight="12dp"
                android:textColor="@color/f999999"
                android:textSize="13sp" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/view_hor_padingleft10" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="14dp"
                android:paddingLeft="11dp"
                android:paddingTop="15dp"
                android:text="电话"
                android:textColor="@color/f999999"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/msg_details_phone"
                android:layout_width="0dp"
                android:background="@color/white"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingBottom="14dp"
                android:paddingLeft="11dp"
                android:paddingTop="15dp"
                android:hint="输入用户手机号"
                android:inputType="number"
                android:maxLength="11"
                android:textColor="@color/f333333"
                android:textSize="12sp" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/view_hor_padingleft10" />
        </FrameLayout>

    </LinearLayout>


</LinearLayout>