<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/aty_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:tabBackground="@color/white"
        app:tabIndicatorColor="@color/title_redF23030"
        app:tabIndicatorHeight="3dp"
        app:tabSelectedTextColor="@color/title_redF23030"
        app:tabTextColor="@color/f333333" />

    <View
        android:layout_width="match_parent"
        android:layout_height="9dp"
        android:background="@color/diviceF6F6F6" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_out_food"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>