<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/activity_title" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <View
        android:background="@color/diviceF6F6F6"
        android:layout_width="match_parent"
        android:layout_height="9dp"/>
    <RelativeLayout
        android:id="@+id/consigneeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="8dp"
        >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="8dp"
            app:srcCompat="@mipmap/redlocation" />

        <TextView
            android:id="@+id/consigneeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_marginTop="13dp"
            android:layout_toEndOf="@id/imageView"
            android:text="收货人：于点"
            android:textColor="#FF333333"
            android:textSize="15dp"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="11dp"
            android:src="@mipmap/right"
            app:layout_goneMarginEnd="15dp" />

        <TextView
            android:id="@+id/telTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="13dp"
            android:layout_toStartOf="@id/imageView2"
            android:text="18222413197"
            android:textColor="#FF333333"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/receivingAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/telTv"
            android:layout_alignStart="@id/consigneeTv"
            android:layout_below="@id/telTv"
            android:layout_marginTop="13dp"
            android:layout_toEndOf="@id/imageView"
            android:layout_toStartOf="@id/imageView2"
            android:textColor="#FF666666"
            android:textSize="14dp" />


    </RelativeLayout>
    <View
    android:background="@color/diviceF6F6F6"
    android:layout_width="match_parent"
    android:layout_height="9dp"/>
    <RelativeLayout
        android:paddingLeft="11dp"
        android:paddingRight="11dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="38dp">
        <TextView
            android:id="@+id/tv_cooker_name"
            android:text="王大锤 15081138523"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_state"
            android:layout_alignParentRight="true"
            android:text="待接单"
            android:textSize="12dp"
            android:textColor="@color/title_redF23030"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_food"
        android:background="@color/colorEEEEEE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:paddingTop="13dp"
            android:paddingRight="12dp"
            android:paddingBottom="12dp"
            android:layout_height="77dp">
            <TextView
                android:text="共2件"
                android:id="@+id/tv_num"
                android:layout_marginLeft="97dp"
                android:textSize="13dp"
                android:textColor="@color/f333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_total"
                android:textSize="13dp"
                android:text="总计：24元(含运费￥10元)"
                android:layout_marginLeft="160dp"
                android:textColor="@color/f333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_left"
                android:text="拒绝接单"
                android:textSize="10dp"
                android:background="@drawable/black_shape"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="90dp"
                android:layout_width="67dp"
                android:layout_height="27dp" />

            <Button
                android:id="@+id/bt_right"
                android:background="@drawable/red_shape"
                android:text="同意接单"
                android:textSize="10dp"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_width="67dp"
                android:layout_height="27dp" />
        </RelativeLayout>
    <View
        android:background="@color/diviceF6F6F6"
        android:layout_width="match_parent"
        android:layout_height="9dp"/>
    <RelativeLayout
        android:layout_marginTop="12dp"
        android:paddingLeft="11dp"
        android:paddingBottom="11dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_remarks"
            android:text="备注："
            android:textSize="12dp"
            android:textColor="@color/f333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_remarks_details"
            android:text="我要的贼辣，但是一定要多放辣，最好在外面裹一层辣椒"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="16dp"
            android:textSize="12dp"
            android:textColor="@color/f333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_marginLeft="11dp"
        android:background="@color/D2D2D2"
        android:layout_marginRight="11dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <!--订单编号-->
    <RelativeLayout
        android:layout_marginTop="11dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="11dp"
            android:text="订单编号："
            android:textColor="@color/f333333"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_ddbh"
            android:text="060606001"
            android:textColor="@color/f333333"
            android:textSize="12dp"
            android:layout_marginLeft="111dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <!--<TextView
            android:text="订单编号："
            style="@style/TextLeft" />-->
    </RelativeLayout>
    <!--下单时间-->
    <RelativeLayout
        android:layout_marginTop="9dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="11dp"
            android:text="下单时间"
            android:textColor="@color/f333333"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_xd_time"
            android:text="2017/04/08 22:32:56"
            android:textColor="@color/f333333"
            android:textSize="12dp"
            android:layout_marginLeft="111dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <!--支付方式-->
    <RelativeLayout
        android:layout_marginTop="9dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="11dp"
            android:text="支付方式"
            android:textColor="@color/f333333"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_pay_mode"
            android:text="在线支付"
            android:textColor="@color/f333333"
            android:textSize="12dp"
            android:layout_marginLeft="111dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <!--配送时间-->
    <RelativeLayout
        android:layout_marginTop="9dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="11dp"
            android:text="配送时间"
            android:textColor="@color/f333333"
            android:textSize="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_ps_time"
            android:text="2017/04/08 22:32:56"
            android:textColor="@color/f333333"
            android:textSize="12dp"
            android:layout_marginLeft="111dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
        <!--商品总计-->
        <RelativeLayout
            android:layout_marginTop="9dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="11dp"
                android:text="商品总计"
                android:textColor="@color/f333333"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_good_num"
                android:text="2017/04/08 22:32:56"
                android:textColor="@color/f333333"
                android:textSize="12dp"
                android:layout_marginLeft="111dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <!--配送费-->
        <RelativeLayout
            android:layout_marginTop="9dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="11dp"
                android:text="配送费"
                android:textColor="@color/f333333"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_ps_money"
                android:text="￥24"
                android:textColor="@color/f333333"
                android:textSize="12dp"
                android:layout_marginLeft="111dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <!--会员卡-->
        <RelativeLayout
            android:layout_marginTop="9dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="11dp"
                android:text="会员卡"
                android:textColor="@color/f333333"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_hy_card"
                android:text="￥24"
                android:textColor="@color/f333333"
                android:textSize="12dp"
                android:layout_marginLeft="111dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <!--代金券-->
        <RelativeLayout
            android:layout_marginTop="9dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="11dp"
                android:text="代金券"
                android:textColor="@color/f333333"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_djj"
                android:text="￥24"
                android:textColor="@color/f333333"
                android:textSize="12dp"
                android:layout_marginLeft="111dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <!--优惠卷-->
        <RelativeLayout
            android:layout_marginTop="9dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="11dp"
                android:text="优惠卷"
                android:textColor="@color/f333333"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_yhj"
                android:text="无"
                android:textColor="@color/f333333"
                android:textSize="12dp"
                android:layout_marginLeft="111dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_marginTop="12dp"
            android:layout_marginLeft="11dp"
            android:background="@color/D2D2D2"
            android:layout_marginRight="11dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="11dp"
                android:text="实付"
                android:textColor="@color/colorF53619"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_real_payment"
                android:text="￥24"
                android:textColor="@color/colorF53619"
                android:textSize="12dp"
                android:layout_marginLeft="111dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>

    </ScrollView>
</LinearLayout>