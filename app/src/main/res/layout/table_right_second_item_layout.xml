<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/food_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="无敌香蕉牛奶"
        android:textColor="#ff333333"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/food_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x1"
        android:textColor="#ff333333"
        android:textSize="12sp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="87dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />



    <TextView
        android:id="@+id/food_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥50.00"
        android:textColor="#ff333333"
        android:textSize="12sp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="11dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/food_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="大份 甜口 花生碎/芒果/柠檬片"
        android:textColor="#ff999999"
        android:textSize="9sp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="11dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/food_name_tv"
        />

    <TextView
        android:id="@+id/expect_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="预计时间：00:12:56"
        android:textColor="#ff333333"
        android:drawablePadding="5dp"
        android:drawableLeft="@mipmap/gray_time"
        android:layout_marginStart="11dp"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="9sp"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@id/food_info_tv"
        />
    <TextView
        android:id="@+id/open_dish_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启菜时间：11:20"
        android:textColor="#fff23030"
        android:textSize="9sp"
        android:layout_marginEnd="11dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/expect_time_tv"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginStart="14dp"
        android:layerType="software"
        android:background="@drawable/division_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/expect_time_tv"
    />
</android.support.constraint.ConstraintLayout>