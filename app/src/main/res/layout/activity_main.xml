<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/activity_title" />

    <FrameLayout
        android:id="@+id/activity_frg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6" />

    <include layout="@layout/view_hor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="6dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/number_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/icon_be_back"
            android:gravity="center"
            android:text="排号"
            android:textColor="@color/f999999" />

        <TextView
            android:id="@+id/hall_spot_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/icon_be_back"
            android:gravity="center"
            android:text="堂点"
            android:textColor="@color/f999999" />

        <TextView
            android:id="@+id/tv_out_food"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/icon_be_back"
            android:gravity="center"
            android:text="外卖"
            android:textColor="@color/f999999" />

        <TextView
            android:id="@+id/msg_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/icon_be_back"
            android:gravity="center"
            android:text="消息"
            android:textColor="@color/f999999" />
    </LinearLayout>
</LinearLayout>