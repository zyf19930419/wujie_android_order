<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:toosl="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/activity_title" />

    <android.support.design.widget.TabLayout
        android:id="@+id/aty_choice_table_number"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/title_redF23030"
        app:tabIndicatorHeight="2dp"
        app:tabSelectedTextColor="@color/title_redF23030"
        app:tabTextColor="@color/f999999" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/diviceF6F6F6" />

    <android.support.v4.view.ViewPager
        android:id="@+id/chioce_table_viewp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>